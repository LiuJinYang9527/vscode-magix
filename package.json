{
    "name": "mx-plugin",
    "displayName": "mx-plugin",
    "description": "",
    "version": "0.0.1",
    "publisher": "zhuori",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:mx.plugin",
        "onLanguage:html",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "mx.plugin",
            "title": "MX"
        }],
        "keybindings": [{
            "command": "mx.plugin",
            "key": "ctrl+cmd+m",
            "mac": "ctrl+cmd+m",
            "when": "editorTextFocus"
        }],
        "menus": {
            "editor/context": [{
                "when": "resourceLangId ==  typescript",
                "command": "mx.plugin",
                "group": "mx"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
